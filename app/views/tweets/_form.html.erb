<div class="content">
  <h1><%= @formtitle %></h1>
  <%= form_for(@tweet,url: allocation_method) do |f| %>
    <% if @tweet.errors.any? %>
      <div id="error_explanation" >
        <div class="alert alert-danger" role="alert">
          <span class="errMsg"><%= @tweet.errors.count %>件のエラーがあります</span>
          <ul>
          <% @tweet.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>    
    <% end %>
    <%= f.text_area:content, class: 'form-control set_txtArea',:size => "10x10",:placeholder => "いまどうしてる？"  %>
    <%= link_to '一覧画面へ戻る', tweets_path, class: 'btn btn-default default btn_size' %>
    <%= f.submit @sbmitbtn , class:'btn btn_size' +' '+ "#{@classAdd}"%>
  <% end %>
</div>


