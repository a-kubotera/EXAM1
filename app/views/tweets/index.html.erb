<h1>ツイート一覧</h1>
<div class="row">
  <div class="col-md-8 col-sm-10 color_white">
    <%if notice.present? %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
    <% end %>
    <% @tweets.each do |tw| %>
      <div class="row tweetView">
        <div class="col-xs-1 pad_none" style="padding-top:15px;"><%= image_tag 'Anonymous.png', :class => "setIcon" %></div>
        <div class="col-xs-11">
          <div class="row">
            <div class="col-xs-12">名無しさん</div>
            <div class="col-xs-12 tweetDetail"><%= tw.content %></div>
            <div class="col-xs-12">
              <%=link_to '編集',edit_tweet_path(tw.id), class:"btn btn-default btn-sm btn-success " %>
              <%=link_to '削除',tweet_path(tw.id),method: :delete, data:{ confirm: 'このツイートを削除しますか？' }, class: 'btn btn-default btn-sm btn btn-danger' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
